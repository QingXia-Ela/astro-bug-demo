{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "isolatedModules": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "noImplicitAny": false,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowJs": true
  },
  "exclude": [
    "./dist"
  ]
}